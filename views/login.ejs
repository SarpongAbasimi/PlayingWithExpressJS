  <link rel="stylesheet" href="/static/styles/login.css">
  <title>Login</title>
</head>
<body>
  <div class="container main-div">
    <form method="POST" action="/registration/login">
      <div class="form-group col-sm-12 col-md-8 col-lg-6" id='form-input-container'>
          <input class='form-control mb-1' type="text" name="name" placeholder='name' required/>
          <input class='form-control mb-1' type="email" name="email" placeholder='email' required/>
          <input class='form-control mb-1' type="password" name="password" placeholder='password' required>
          <input class="btn btn-block" id='submit-button' type="submit" value="Login"/>
          <hr>
          <span class="text-muted span-text">Need an account? <a href="/registration/signup">Sign up now Â»</a></span>
      </div>
    </form>
  </div>
</body>
</html>